<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D1D1CF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_home_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_bottom"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/home"/>

            <TextView
                android:id="@+id/tv_home_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_message_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_message_bottom"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/message"/>

            <TextView
                android:id="@+id/tv_message_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contact_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_contact_bottom"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/contact"/>

            <TextView
                android:id="@+id/tv_contact_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine_bottom"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/mine"/>

            <TextView
                android:id="@+id/tv_mine_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>